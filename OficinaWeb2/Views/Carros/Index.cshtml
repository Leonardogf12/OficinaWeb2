@model IEnumerable<OficinaWeb2.Models.Carro>

@{
    ViewData["Title"] = "Veículos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-dark" style="border-radius:5px" asp-action="Create">Novo Veículo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-warning">
            <th style="text-align:center; font-size: medium; margin-left: 150px">
                @Html.DisplayNameFor(model => model.MODELO)
            </th>

            <th style="text-align:center; padding-left:100px; font-size: medium; margin-left: 150px">
                @Html.DisplayNameFor(model => model.PLACA)
            </th>           

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center; padding-top:25px; font-size:small; text-transform:uppercase">
                    @Html.DisplayFor(modelItem => item.MODELO)
                </td>
                <td style="text-align:center; padding-left:100px; font-size:small; padding-top:25px; text-transform:uppercase">
                    @Html.DisplayFor(modelItem => item.PLACA)
                </td>
               
                <td>
                    <div style="margin-left:550px" class="btn btn-group">
                        <a style="border-bottom-left-radius:5px;border-top-left-radius:5px;border-color:lightslategray" class="btn btn-dark" asp-action="Edit" asp-route-id="@item.ID">Editar</a>
                        <a style="border-color:lightslategray" class="btn btn-dark" asp-action="Details" asp-route-id="@item.ID">Detalhes</a>
                        <a style="border-bottom-right-radius:5px;border-top-right-radius:5px;border-color:lightslategray" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Deletar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>