@model OficinaWeb2.Models.Carro

@{
    ViewData["Title"] = "Excluir";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir esse item?</h3>
<h5 style="color:tomato">Você apagará permanentemente da base de dados!</h5>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MODELO)
        </dt>
        <dd class="col-sm-10" style="text-transform: uppercase">
            @Html.DisplayFor(model => model.MODELO)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PLACA)
        </dt>
        <dd class="col-sm-10" style="text-transform: uppercase">
            @Html.DisplayFor(model => model.PLACA)
        </dd>
        
    </dl>
    <hr />
    <form class="btn btn-group" asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <button type="submit" style="border-bottom-left-radius:5px;border-top-left-radius:5px;border-color:lightslategray" class="btn btn-danger">Deletar</button>
        <button style="border-bottom-right-radius:5px;border-top-right-radius:5px;border-color:lightslategray" class="btn btn-dark" asp-action="Index">Voltar a lista</button>
    </form>
</div>